#!/bin/sh
# Auto-generate manifests before commit

echo "Generating content manifests..."
node scripts/generate-manifests.js

# Add the updated manifests to the commit
git add public/content/events/manifest.json
git add public/content/locations/manifest.json 2>/dev/null || true
git add public/content/announcements/manifest.json 2>/dev/null || true

echo "Manifests updated and staged"